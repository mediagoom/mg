ACLOCAL_AMFLAGS=-I m4

if DEBUG
AM_CFLAGS   = -static -std=c++11 -g3 -O0 -fprofile-arcs -ftest-coverage -fno-inline -fno-inline-small-functions -fno-default-inline -DNDEBUG=1 -D_DEBUG=1 -Wsign-compare
AM_CXXFLAGS = $(AM_CFLAGS)
else
AM_CFLAGS   = -static -O2 -g -std=c++11 -static-libstdc++ -static-libgcc
AM_CXXFLAGS = $(AM_CFLAGS)
endif

CLEAN_GCOV = *.gcno *.gcov *.gcda *.tmp

AM_CXXFLAGS += -I$(top_srcdir)/src
AM_CPPFLAGS = -I$(top_srcdir)/src

